{
   // Use IntelliSense to find out which attributes exist for C# debugging
   // Use hover for the description of the existing attributes
   // For further information visit https://github.com/OmniSharp/omnisharp-vscode/blob/master/debugger-launchjson.md
   "version": "0.2.0",
    "compounds": [
        {
            "name": "API and SPA",
            "configurations": ["Api", "Launch SPA"]
        }
    ],
   "configurations": [
        {
            "name": "Api",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceRoot}//Bifrost.API/bin/Debug/netcoreapp2.0/Bifrost.API.dll",
            "args": [],
            "cwd": "${workspaceRoot}/Bifrost.API",
            "stopAtEntry": false,
            "console": "internalConsole"
          },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch SPA",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/Bifrost.UI"
        },
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach to Chrome",
            "port": 9222,
            "webRoot": "${workspaceFolder}/Bifrost.UI"
        },
    ]
}